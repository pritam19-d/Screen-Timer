{
  "manifest_version": 3,
  "version": "1.1.8",
  "name": "Screen Time Monitor",
  "description": "Tracks how long the browser stays active and focused.",
  "permissions": ["storage", "tabs", "idle", "windows"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/timer-icon.png",
    "32": "icons/timer-icon.png",
    "48": "icons/timer-icon.png",
    "128": "icons/timer-icon.png"
  }
}